@model PassWordGeneratorViewModel
@{
}
<script>
    function copytext(){
        navigator.clipboard.writeText(document.getElementById('text').innerText)
            .then(function () {
                alert('Success!!')
            })
    }
</script>
<div>
    <form method="post" action="~/PassWordGenerator/Password">
        <div class="mb-3">
            <label for="PassWordLenght" class="form-label">Password</label>
            <input asp-for="PassWordLenght">
        </div>
        <div class="mb-3">
            <label for="UpperCase" class="form-label">Upper case</label>
            <input asp-for="UpperCase">
        </div>
        <div class="mb-3">
            <label for="SpecialCaractor" class="form-label">Special Caractor</label>
            <input asp-for="SpecialCaractor">
        </div>
        <div>
            <button class=" btn btn-primary " type="submit">Submit</button>
        </div>
    </form>
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 id="text">@Model.PassResult</h1>
             </div>
            <div class="col">
                <button class="btn btn-info" onclick="copytext()">Copy Password</button>
            </div>
        </div>
    </div>
</div>